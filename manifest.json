{
  "manifest_version": 3,
  "name": "AI Blaster",
  "version": "1.0.0",
  "description": "Compare responses from ChatGPT, Claude, and Gemini side-by-side",

  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://chatgpt.com/",
    "https://chatgpt.com/c/*",
    "https://claude.ai/new",
    "https://claude.ai/chat/*",
    "https://gemini.google.com/app",
    "https://gemini.google.com/app/*"
  ],

  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/", "https://chatgpt.com/c/*"],
      "js": ["src/content-scripts/providers/chatgpt.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://claude.ai/new", "https://claude.ai/chat/*"],
      "js": ["src/content-scripts/providers/claude.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gemini.google.com/app", "https://gemini.google.com/app/*"],
      "js": ["src/content-scripts/providers/gemini.ts"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_icon": {
      "16": "public/icons/icon-16.png",
      "48": "public/icons/icon-48.png",
      "128": "public/icons/icon-128.png"
    }
  },

  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },

  "options_page": "src/options/index.html",

  "icons": {
    "16": "public/icons/icon-16.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  }
}
